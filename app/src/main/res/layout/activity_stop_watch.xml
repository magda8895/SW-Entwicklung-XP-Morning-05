<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".StopWatch">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginBottom="68dp"
        android:text="Change Mileage" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/imageView3"
        android:textSize="100sp" />

    <Button
        android:id="@+id/finishchronometer"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/backButton"
        android:layout_marginEnd="18dp"
        android:onClick="finishChronometer"
        android:text="Save and Finish " />

    <TextView
        android:id="@+id/textViewMileage"
        android:layout_width="242dp"
        android:layout_height="88dp"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewStartTime"
        android:layout_marginEnd="107dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewStartTime"
        android:layout_width="241dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="107dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="67dp"
        android:layout_height="76dp"
        android:layout_alignStart="@+id/backButton"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_timer_black_24dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewMileage"
        android:layout_marginStart="14dp"
        app:srcCompat="@drawable/ic_time_to_leave_black_24dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/textViewStartTime"
        app:srcCompat="@drawable/dateicon" />


</RelativeLayout>